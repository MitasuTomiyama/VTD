
<% @artists.each do |artists| %>

  <%= link_to artist_path(artists) do %>
    <% if artists.image? %>
      <%# <%= image_tag artists.image_id.to_s, fallback: "no_image.png", size: '100x100' %>
      <img src='<%= artists.image_id %>' >
    <% else %>
      <image src="/assets/no_image.png" >
    <% end %>
  <% end %>

  <%= artists.name %>

<% end %>
